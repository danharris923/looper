{
  "manifest_version": 3,
  "name": "YT Loop Station",
  "version": "1.0",
  "description": "Professional loop station for YouTube videos",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Toggle Loop Station"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["loop-station-text.png"],
      "matches": ["*://www.youtube.com/*"]
    }
  ]
}